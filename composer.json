{
    "name": "oltreblocksy/theme",
    "description": "OltreBlocksy - A highly modular and configurable WordPress theme that surpasses Blocksy in terms of options, beauty, cleanliness, modularity and performance.",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "OltreBlocksy Team",
            "homepage": "https://oltreblocksy.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "OltreBlocksy\\": "oltreblocksy-theme/inc/",
            "OltreBlocksy\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OltreBlocksy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "test:unit": "pest tests/Unit",
        "test:integration": "pest tests/Integration",
        "test:performance": "pest tests/Performance"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
