{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "OltreBlocksy",
  "description": "A highly modular and configurable WordPress theme that surpasses Blocksy in terms of options, beauty, cleanliness, modularity, and performance.",
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "min(100% - 2rem, 65ch)",
      "wideSize": "min(100% - 2rem, 1200px)"
    },
    "spacing": {
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 7,
        "mediumStep": 1.5,
        "unit": "rem"
      },
      "spacingSizes": [
        {
          "size": "clamp(0.25rem, 0.5vw, 0.5rem)",
          "slug": "xs",
          "name": "Extra Small"
        },
        {
          "size": "clamp(0.5rem, 1vw, 1rem)",
          "slug": "sm",
          "name": "Small"
        },
        {
          "size": "clamp(1rem, 2vw, 2rem)",
          "slug": "md",
          "name": "Medium"
        },
        {
          "size": "clamp(1.5rem, 3vw, 3rem)",
          "slug": "lg",
          "name": "Large"
        },
        {
          "size": "clamp(2rem, 4vw, 4rem)",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "clamp(3rem, 6vw, 6rem)",
          "slug": "xxl",
          "name": "Extra Extra Large"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%", "clamp"]
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "name": "System Font",
          "slug": "system"
        },
        {
          "fontFamily": "Georgia, 'Times New Roman', Times, serif",
          "name": "Serif",
          "slug": "serif"
        },
        {
          "fontFamily": "'Courier New', Courier, monospace",
          "name": "Monospace",
          "slug": "monospace"
        }
      ],
      "fontSizes": [
        {
          "size": "clamp(0.75rem, 0.95vw, 0.875rem)",
          "slug": "xs",
          "name": "Extra Small"
        },
        {
          "size": "clamp(0.875rem, 1.1vw, 1rem)",
          "slug": "sm",
          "name": "Small"
        },
        {
          "size": "clamp(1rem, 1.25vw, 1.125rem)",
          "slug": "base",
          "name": "Base"
        },
        {
          "size": "clamp(1.125rem, 1.4vw, 1.25rem)",
          "slug": "lg",
          "name": "Large"
        },
        {
          "size": "clamp(1.25rem, 1.75vw, 1.5rem)",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "clamp(1.5rem, 2.25vw, 2rem)",
          "slug": "2xl",
          "name": "2X Large"
        },
        {
          "size": "clamp(2rem, 3vw, 2.5rem)",
          "slug": "3xl",
          "name": "3X Large"
        },
        {
          "size": "clamp(2.5rem, 4vw, 3rem)",
          "slug": "4xl",
          "name": "4X Large"
        }
      ],
      "fontWeight": true,
      "lineHeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "dropCap": true
    },
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": true,
      "defaultGradients": true,
      "defaultPalette": false,
      "duotone": [
        {
          "colors": ["#000000", "#ffffff"],
          "slug": "black-and-white",
          "name": "Black and White"
        },
        {
          "colors": ["#1e40af", "#3b82f6"],
          "slug": "blue-gradient",
          "name": "Blue Gradient"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
          "name": "Purple Blue",
          "slug": "purple-blue"
        },
        {
          "gradient": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
          "name": "Pink Red",
          "slug": "pink-red"
        }
      ],
      "palette": [
        {
          "color": "#000000",
          "name": "Black",
          "slug": "black"
        },
        {
          "color": "#ffffff",
          "name": "White",
          "slug": "white"
        },
        {
          "color": "#1e293b",
          "name": "Slate 800",
          "slug": "slate-800"
        },
        {
          "color": "#475569",
          "name": "Slate 600",
          "slug": "slate-600"
        },
        {
          "color": "#64748b",
          "name": "Slate 500",
          "slug": "slate-500"
        },
        {
          "color": "#94a3b8",
          "name": "Slate 400",
          "slug": "slate-400"
        },
        {
          "color": "#cbd5e1",
          "name": "Slate 300",
          "slug": "slate-300"
        },
        {
          "color": "#e2e8f0",
          "name": "Slate 200",
          "slug": "slate-200"
        },
        {
          "color": "#f1f5f9",
          "name": "Slate 100",
          "slug": "slate-100"
        },
        {
          "color": "#f8fafc",
          "name": "Slate 50",
          "slug": "slate-50"
        },
        {
          "color": "#1e40af",
          "name": "Blue 700",
          "slug": "blue-700"
        },
        {
          "color": "#2563eb",
          "name": "Blue 600",
          "slug": "blue-600"
        },
        {
          "color": "#3b82f6",
          "name": "Blue 500",
          "slug": "blue-500"
        },
        {
          "color": "#60a5fa",
          "name": "Blue 400",
          "slug": "blue-400"
        },
        {
          "color": "#93c5fd",
          "name": "Blue 300",
          "slug": "blue-300"
        },
        {
          "color": "#dbeafe",
          "name": "Blue 100",
          "slug": "blue-100"
        },
        {
          "color": "#eff6ff",
          "name": "Blue 50",
          "slug": "blue-50"
        }
      ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "dimensions": {
      "aspectRatio": true,
      "minHeight": true
    },
    "position": {
      "sticky": true
    },
    "shadow": {
      "presets": [
        {
          "name": "Small",
          "slug": "sm",
          "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)"
        },
        {
          "name": "Medium",
          "slug": "md",
          "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
        },
        {
          "name": "Large",
          "slug": "lg",
          "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
        },
        {
          "name": "Extra Large",
          "slug": "xl",
          "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
        }
      ]
    },
    "custom": {
      "spacing": {
        "container": "min(100% - 2rem, 1200px)",
        "content": "min(100% - 2rem, 65ch)",
        "headerHeight": "4rem"
      },
      "typography": {
        "fluid": true,
        "fontScale": 1.25,
        "lineHeightScale": 1.6
      },
      "animation": {
        "transitionFast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
        "transitionBase": "250ms cubic-bezier(0.4, 0, 0.2, 1)",
        "transitionSlow": "350ms cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": true
        },
        "color": {
          "background": true,
          "text": true
        },
        "spacing": {
          "padding": true
        },
        "typography": {
          "fontSize": true,
          "fontWeight": true
        }
      },
      "core/heading": {
        "color": {
          "background": true,
          "text": true
        },
        "spacing": {
          "margin": true,
          "padding": true
        },
        "typography": {
          "fontSize": true,
          "fontWeight": true,
          "lineHeight": true,
          "letterSpacing": true
        }
      },
      "core/paragraph": {
        "color": {
          "background": true,
          "text": true
        },
        "spacing": {
          "margin": true,
          "padding": true
        },
        "typography": {
          "fontSize": true,
          "lineHeight": true
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--slate-50)",
      "text": "var(--wp--preset--color--slate-800)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--md)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "0.375rem"
        },
        "color": {
          "background": "var(--wp--preset--color--blue-600)",
          "text": "var(--wp--preset--color--white)"
        },
        "spacing": {
          "padding": {
            "top": "0.5rem",
            "right": "1rem",
            "bottom": "0.5rem",
            "left": "1rem"
          }
        },
        "typography": {
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--blue-700)"
          }
        },
        ":focus": {
          "color": {
            "background": "var(--wp--preset--color--blue-700)"
          },
          "outline": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--blue-300)",
            "offset": "2px"
          }
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--blue-600)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--blue-700)"
          }
        },
        ":focus": {
          "outline": {
            "width": "2px",
            "style": "solid",
            "color": "var(--wp--preset--color--blue-300)",
            "offset": "2px"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "letterSpacing": "-0.025em"
        },
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "700"
        }
      },
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontWeight": "500"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}